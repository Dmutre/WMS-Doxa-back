{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage/e2e",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/e2e/**/*.e2e-spec.ts"],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.module.ts",
    "!src/**/*.dto.ts",
    "!src/main.ts",
    "!src/**/index.ts"
  ],
  "coverageReporters": ["text", "lcov", "json", "html"]
}

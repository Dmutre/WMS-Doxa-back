{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage/integration",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/integration/**/*.integration-spec.ts"],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}
